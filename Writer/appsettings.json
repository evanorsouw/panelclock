{
  "items": [
    {
      "id": "clock1",
      "type": "analogclock-modern",
      "x": 1,
      "y": "=1+4*clock2",
      "diameter": "=62-20*clock2",
      "showseconds": true,
      "secondhandcolor": "=color(1,0,0)",
      "maincolor": "=color(1,1,1)",
      "smoothseconds": "=clock2"
    },
    {
      "id": "clock1_label",
      "type": "label",
      "fontname": "Arial:10",
      "x": 1,
      "width": 42,
      "y": 51,
      "horizontalalignment": "center",
      "format": "Empel"
    },
    {
      "id": "clock2",
      "x": "=46",
      "y": "=clock1.y",
      "diameter": 42,
      "type": "analogclock-modern",
      "showseconds": true,
      "smoothseconds": true,
      "timezone": "new_york"
    },
    {
      "id": "clock2_label",
      "type": "label",
      "fontname": "Arial:10",
      "x": "=clock2.x",
      "y": "=clock1_label.y",
      "width": "=clock2.diameter",
      "horizontalalignment": "center",
      "format": "New York"
    },
    {
      "id": "time",
      "type": "label",
      "fontname": "Arial:Bold:14",
      "y": "=1 - clock2*time.height",
      "x": 128,
      "horizontalalignment": "right",
      "format": "hours(24H):minutes()"
    },
    {
      "id": "weekday",
      "type": "label",
      "fontname": "Arial:10",
      "x": 128,
      "y": "=time.y2",
      "horizontalalignment": "right",
      "format": "wday([Maandag,Dinsdag,Woensdag,Donderdag,Vrijdag,Zaterdag,Zondag])"
    },
    {
      "id": "date",
      "type": "label",
      "fontname": "Arial:10",
      "x": 128,
      "y": "=weekday.y2",
      "horizontalalignment": "right",
      "format": "mday(#) month([Jan,Feb,Mar,Apr,Mei,Jun,Jul,Aug,Sep,Okt,Nov,Dec])"
    },
    {
      "id": "temperature",
      "type": "label",
      "fontname": "Arial:8",
      "x": "=weather.x1",
      "y": "=weather.y2",
      "horizontalalignment": "right",
      "verticalalignment": "bottom",
      "format": "=environment.temperature+'°'"
    },
    {
      "id": "weather",
      "type": "icon",
      "source": "=environment.weather+'.png'",
      "x": 128,
      "horizontalalignment": "right",
      "y": "=date.y2+2"
    }
  ],
  "expressions": {
  },
  "scenes": [
    {
      "id": "scene1",
      "cron": "* * * * * *",
      "cron2": "* 0-1,5-6,10-11,15-16,20-21,25-26,30-31,35-36,40-41,45-46,50-51,55-56 * * * *",
      "cron1": "0-1,5-6,10-11,15-16,20-21,25-26,30-31,35-36,40-41,45-46,50-51,55-56 * * * * *",
      "items": [
        { "id": "clock1" },
        { "id": "clock1_label" },
        { "id": "clock2" },
        { "id": "clock2_label" },
        { "id": "weekday" },
        { "id": "date" },
        { "id": "temperature" },
        { "id": "weather" },
        {
          "id": "anniversaries",
          "type": "ticker",
          "fontname": "Arial:12",
          "x": 0,
          "y": 63,
          "width": 128,
          "height": 14,
          "format": "Vandaag: iPhone8 repareren",
          "verticalalignment": "bottom",
          "bars": 17,
          "baranimateoverlap": 0.8,
          "showhidetime": 1.5,
          "dividercolor": "=color(0.5,0.5,0.5)",
          "backgroundcolor": "=color(0.2,0,0)",
          "textcolor": "=color(1,1,.8)",
          "visible": false,
          "scrollspeed": 60,
          "loops": 1
        }
      ]
    }
  ]
}