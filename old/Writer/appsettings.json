{
    "env": {
        "weerlive.apikey": "31a26656d0",
        "longitude": 51.732034245965046,
        "lattitude": 5.32637472036842
    },
    "items": [
        {
            "id": "clock1",
            "type": "analogclock-modern",
            "x": "=(env.now.yday%2<1) ? 1 : 65",
            "y": 1,
            "diameter": 62,
            "secondhandcolor": "=color(1,0,0)",
            "maincolor": "=color(1,1,1)",
            "secondmode": "=(env.now.yday%2<1) ? 2 : 1"
        },
        {
            "id": "time",
            "type": "label",
            "fontname": "Arial:Bold:14",
            "y": 0,
            "x": "=(env.now.yday%2<1) ? seconds.x1-time.width : 0",
            "verticalalignment": "top",
            "format": "hours(now,24H):minutes(now)"
        },
        {
            "id": "seconds",
            "type": "label",
            "fontname": "Arial:Bold:10",
            "y": 1,
            "x": "=(env.now.yday%2<1) ? 128-seconds.width : time.x2",
            "verticalalignment": "top",
            "format": "seconds(now)"
        },
        {
            "id": "weekday",
            "type": "label",
            "fontname": "Arial:10",
            "x": "=(env.now.yday%2<1) ? 128 : 0",
            "y": "=time.y2-2",
            "horizontalalignment": "=(env.now.yday%2<1) ? 2 : 0",
            "format": "wday(now,[Maandag,Dinsdag,Woensdag,Donderdag,Vrijdag,Zaterdag,Zondag])"
        },
        {
            "id": "date",
            "type": "label",
            "fontname": "Arial:10",
            "x": "=(env.now.yday%2<1) ? 128 : 0",
            "y": "=weekday.y2-2",
            "horizontalalignment": "=(env.now.yday%2<1) ? 2 : 0",
            "format": "mday(now,#) month(now,[Jan,Feb,Mar,Apr,Mei,Jun,Jul,Aug,Sep,Okt,Nov,Dec])"
        },
        {
            "id": "weather",
            "type": "icon",
            "source": "=env.weather",
            "x": "=(env.now.yday%2<1) ? 128-weather.width : 0",
            "y": "=40",
            "width": 30
        },
        {
            "id": "temperature",
            "type": "label",
            "fontname": "Arial:10:B",
            "x": "=(env.now.yday%2<1) ? windchill.x1-temperature.width : weather.x2",
            "y": "=weather.y2+temperature.height + 5",
            "verticalalignment": "center",
            "format": "=env.temperature+'°'"
        },
        {
            "id": "windchill",
            "type": "label",
            "fontname": "Arial:9",
            "x": "=(env.now.yday%2<1) ? weather.x1-windchill.width+2 : temperature.x2",
            "y": "=weather.y2+temperature.height + 5",
            "verticalalignment": "center",
            "format": "='('+env.windchill+')'"
        },
        {
            "id": "wind",
            "type": "windindicator",
            "x": "=(env.now.yday%2<1) ? 62 : weather.x2",
            "y": 36,
            "width": 14,
            "height": 14,
            "angle": "=env.windangle"
        },
        {
            "id": "windspeed",
            "type": "label",
            "fontname": "Arial:10:B",
            "x": "=wind.x2+5",
            "y": "=(wind.y1+wind.y2)/2+8",
            "horizontalalignment": "center",
            "verticalalignment": "bottom",
            "format": "=env.windspeed"
        },
        {
            "id": "windspeed_unit",
            "type": "label",
            "fontname": "Arial:9",
            "x": "=windspeed.x2-1",
            "y": "=windspeed.y1",
            "verticalalignment": "top",
            "format": "ms"
        },
        {
            "id": "anniversaries",
            "type": "ticker",
            "fontname": "Arial:12",
            "x": 0,
            "y": "=64-anniversaries.height",
            "width": 128,
            "height": 14,
            "format": "Vandaag: iPhone8 repareren",
            "verticalalignment": "bottom",
            "bars": 17,
            "baranimateoverlap": 0.8,
            "showhidetime": 1.5,
            "dividercolor": "=color(0.5,0.5,0.5)",
            "backgroundcolor": "=color(0.2,0,0)",
            "textcolor": "=color(1,1,.8)",
            "visible": true,
            "scrollspeed": 60,
            "loops": 1
        },
        {
            "id": "sunriseicon",
            "type": "icon",
            "source": "sunset",
            "x": "=64",
            "y": "=32",
            "width": 64
        },
        {
            "id": "sunrisetxt",
            "type": "label",
            "fontname": "Arial:13",
            "x": "=",
            "y": "=sunriseicon.y1",
            "verticalalignment": "center",
            "format": "hours(env.sunset,24H):minutes(env.sunset)"
        }
    ],
    "expressions": {
    },
    "scenes": [
        {
            "id": "scene1",
            "cron": "* * * * * *",
            "cron2": "* 0-1,5-6,10-11,15-16,20-21,25-26,30-31,35-36,40-41,45-46,50-51,55-56 * * * *",
            "cron1": "0-1,5-6,10-11,15-16,20-21,25-26,30-31,35-36,40-41,45-46,50-51,55-56 * * * * *",
            "items": [
                { "id": "clock1" },
                { "id": "seconds" },
                { "id": "time" },
                { "id": "weekday" },
                { "id": "date" },
                { "id": "temperature" },
                { "id": "windchill" },
                { "id": "weather" },
                { "id": "wind" },
                { "id": "windspeed" },
                { "id": "windspeed_unit" },
                { "id": "sunriseicon" },
                { "id": "sunrisetxt" },
            ]
        }
    ]
}